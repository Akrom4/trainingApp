{% extends 'base.html.twig' %}

{% block title %}Chapter index
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="container">
		<div class="my-4">
			<h2 class="text-center">Chapters</h2>
			<a href="{{ path('app_chapter_new') }}" class="btn btn-primary float-end m-1">Add new chapter</a>
		</div>
		<table class="table table-striped table-bordered table-responsive mt-2" id="userTable">
			<thead class="thead-dark">
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Cours</th>
					<th>Pgndata</th>
					<th>rawpgn</th>
					{% if is_granted('ROLE_ADMIN') %}
						<th>Edit</th>
						<th>Delete</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				{% for chapter in chapters %}
					<tr>
						<td>{{ chapter.id }}</td>
						<td>
							<a href="{{ path('app_chapter_show', { 'id': chapter.id }) }}">{{ chapter.title }}</a>
						</td>
						<td>{{ chapter.course ? chapter.course.id }}</td>
						<td>{{ chapter.pgndata ? chapter.pgndata|json_encode|slice(0, 20) ~ '...' : '' }}</td>
						<td>{{ chapter.rawpgn }}</td>
						{% if is_granted('ROLE_ADMIN') %}
							<td>
								<a href="{{ path('app_chapter_edit', { 'id': chapter.id }) }}" class="btn btn-primary">Edit</a>
							</td>
							<td>{{ include('chapter/_delete_form.html.twig', { 'id': chapter.id }) }}</td>
						{% endif %}
					</tr>
				{% else %}
					<tr>
						<td colspan="7">No records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		$('#userTable').DataTable({paging: false});
	</script>
{% endblock %}
