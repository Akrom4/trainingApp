{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<h1 class="text-center  mt-3">Utilisateurs</h1>
<a href="{{ path('app_user_add') }}" class="btn btn-primary float-end m-1">Ajouter</a>
<div class="container" >
    <table class="table table-striped table-bordered table-responsive" id="userTable">
        <thead>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th> 
            <th>Creation</th>
            <th>Update</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Update</th>
                <th>Delete</th>
            {% endif %}
        </thead>
        <tbody>
            {% if users is defined %}
                {% for user in users %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.username}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.roles ? user.roles|json_encode : ''}}</td>
                        <td>{{user.createdAt | date('Y/m/d H:i') }}</td>
                        <td>{{user.updatedAt | date('Y/m/d H:i') }}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td><a href="{{ path('app_user_edit',{'id' : user.id}) }}" class="btn btn-success">Modifier</a></td>
                            <td>{{ include('user/_delete_form.html.twig') }} </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#userTable').DataTable();
        });
    </script>
{% endblock %}