{% extends 'base.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}
    <h1>Courses</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ course.image }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ course.createdat ? course.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ course.updatedat ? course.updatedat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_courses_index') }}">back to list</a>

    <a href="{{ path('app_courses_edit', {'id': course.id}) }}">edit</a>

    {{ include('courses/_delete_form.html.twig') }}
{% endblock %}
